.container
  %h1 Diagnoses

  %table.table
    %thead
      %tr
        %th Title
        %th Description
        %th Age min
        %th Age max
        %th Gender
        %th
        %th
        %th

    %tbody
      - @diagnoses.each do |diagnosis|
        %tr
          %td= diagnosis.title
          %td= diagnosis.description
          %td= diagnosis.age_min
          %td= diagnosis.age_max
          %td= diagnosis.gender
          %td= link_to 'Show', admin_diagnosis_path(diagnosis)
          %td= link_to 'Edit', edit_admin_diagnosis_path(diagnosis)
          %td= link_to 'Destroy', admin_diagnosis_path(diagnosis), method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Diagnosis', new_admin_diagnosis_path, class: 'btn btn-primary'
