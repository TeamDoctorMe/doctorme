-# frozen_string_literal: true
= simple_form_for([:admin, @diagnosis]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title, input_html: { class: 'form-control' }
    = f.input :description, input_html: { class: 'form-control' }
    .row
      .col-sm-6
        = f.input :age_min, input_html: { class: 'form-control' }
      .col-sm-6
        = f.input :age_max, input_html: { class: 'form-control' }
    = f.input :gender, input_html: { class: 'form-control' }, collection: Diagnosis.genders.keys, include_blank: false

    = f.input :primary_medications, as: :check_boxes, collection: Medication.all, checked: @diagnosis.primary_medication_ids
    = f.input :secondary_medications, as: :check_boxes, collection: Medication.all, checked: @diagnosis.secondary_medication_ids

  .form-actions
    = f.button :submit
